<Window
    x:Class="_12.资源基础.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_12.资源基础"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="300"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  资源写在这里 仅限当前页面访问，为了共享出去 就用了资源字典  -->
        <!--  资源字典在app.xaml里面 合并  -->
        <!--<SolidColorBrush x:Key="solidColor" Color="Red" />-->
    </Window.Resources>
    <Grid>
        <StackPanel>
            <!--  静态资源 设置一次就不会再变化了  -->
            <Button
                Margin="20"
                BorderBrush="{StaticResource SolideColor}"
                BorderThickness="2">
                按钮1
            </Button>
            <!--  使用动态资源 DynamicResource 资源变化会跟着变化  -->
            <Button
                Margin="20"
                Background="{DynamicResource SolideColor}"
                BorderThickness="2">
                按钮2
            </Button>
            <Button
                Name="update"
                Margin="20"
                Click="update_Click">
                update source
            </Button>
        </StackPanel>
    </Grid>
</Window>
