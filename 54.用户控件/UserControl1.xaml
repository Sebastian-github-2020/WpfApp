<UserControl
    x:Class="_54.用户控件.UserControl1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_54.用户控件"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="300"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Name="lay" TargetType="StackPanel">
            <Setter Property="Margin" Value="10" />
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="50">用户名:</TextBlock>
            <TextBox MinWidth="100" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="50" HorizontalAlignment="Center">密码:</TextBlock>
            <PasswordBox MinWidth="100" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="50">用户名:</TextBlock>
            <TextBox MinWidth="100" />
        </StackPanel>
    </StackPanel>
</UserControl>
