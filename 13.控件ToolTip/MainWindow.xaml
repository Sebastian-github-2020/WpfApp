<Window x:Class="_13.控件ToolTip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_13.控件ToolTip"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="按钮" Width="100" Height="30">
            <Button.ToolTip>
                <TextBlock>按钮的tooltip</TextBlock>
            </Button.ToolTip>
        </Button>
        <Button Content="按钮1" Width="100" Height="30">
            <Button.ToolTip>
                <ToolTip Foreground="Teal" BorderBrush="Red" BorderThickness="2">
                    <UniformGrid Rows="4" Columns="1">
                        <TextBlock>按钮的tooltip1</TextBlock>
                        <TextBlock>按钮的tooltip2</TextBlock>
                        <TextBlock>按钮的tooltip3</TextBlock>
                        <TextBlock>按钮的tooltip4</TextBlock>
                    </UniformGrid>
                </ToolTip>
            </Button.ToolTip>
        </Button>
    </StackPanel>
</Window>
